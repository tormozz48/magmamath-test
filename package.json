{
  "name": "magmamath-test",
  "version": "1.0.0",
  "description": "Test task for MagmaMath",
  "main": "dist/main.js",
  "scripts": {
    "format": "prettier --write \"user/src/**/*.ts\" \"notification/src/**/*.ts\"",
    "lint": "eslint \"{user/src,notification/src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{user/src,notification/src,test}/**/*.ts\" --fix",
    "sort-imports": "prettier --write \"{user/src,notification/src}/**/*.ts\"",
    "prepare": "husky",
    "user:build": "tsc -p user/tsconfig.json",
    "user:start": "ts-node -r tsconfig-paths/register user/src/main.ts",
    "user:start:dev": "nodemon --watch user/src -e ts --exec \"npm run user:start\"",
    "user:start:debug": "node --inspect-brk -r ts-node/register -r tsconfig-paths/register user/src/main.ts",
    "notification:build": "tsc -p notification/tsconfig.json",
    "notification:start": "ts-node -r tsconfig-paths/register notification/src/main.ts",
    "notification:start:dev": "nodemon --watch notification/src -e ts --exec \"npm run notification:start\"",
    "notification:start:debug": "node --inspect-brk -r ts-node/register -r tsconfig-paths/register notification/src/main.ts",
    "build": "npm run user:build && npm run notification:build",
    "start:prod": "concurrently \"npm run user:start\" \"npm run notification:start\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "user:test:e2e": "jest --config ./user/test/jest-e2e.json",
    "notification:test:e2e": "jest --config ./notification/test/jest-e2e.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^11.0.14",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.14",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/microservices": "^11.0.15",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/platform-express": "^11.0.14",
    "@nestjs/swagger": "^11.1.1",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "mongoose": "^8.13.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.1",
    "@faker-js/faker": "^9.6.0",
    "@nestjs/cli": "^11.0.6",
    "@nestjs/testing": "^11.0.14",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "factory.ts": "^1.4.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  }
}
