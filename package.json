{
  "name": "magmamath-test",
  "version": "1.0.0",
  "description": "Test task for MagmaMath",
  "main": "dist/main.js",
  "scripts": {
    "format": "prettier --write \"user/src/**/*.ts\" \"notification/src/**/*.ts\"",
    "lint": "eslint \"{user/src,notification/src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{user/src,notification/src,test}/**/*.ts\" --fix",
    
    "user:build": "nest build -p user/nest-cli.json",
    "user:start": "nest start -p user/nest-cli.json",
    "user:start:dev": "nest start -p user/nest-cli.json --watch",
    "user:start:debug": "nest start -p user/nest-cli.json --debug --watch",
    "user:start:prod": "node dist/user/src/main",
    
    "notification:build": "nest build -p notification/nest-cli.json",
    "notification:start": "nest start -p notification/nest-cli.json",
    "notification:start:dev": "nest start -p notification/nest-cli.json --watch",
    "notification:start:debug": "nest start -p notification/nest-cli.json --debug --watch",
    "notification:start:prod": "node dist/notification/src/main",
    
    "build": "npm run user:build && npm run notification:build",
    "start:prod": "concurrently \"npm run user:start:prod\" \"npm run notification:start:prod\"",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^11.0.14",
    "@nestjs/core": "^11.0.14",
    "@nestjs/platform-express": "^11.0.14",
    "dotenv": "^16.4.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.6",
    "@nestjs/testing": "^11.0.14",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "concurrently": "^7.6.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.3"
  }
}
